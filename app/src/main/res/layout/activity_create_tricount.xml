<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Champ pour entrer le nom du Tricount -->
    <EditText
        android:id="@+id/tricountName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nom du Tricount"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Champ pour entrer le type du Tricount (ex : voyage, coloc) -->
    <EditText
        android:id="@+id/tricountType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type du Tricount"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tricountName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Bouton de création du Tricount -->
    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer"
        app:layout_constraintTop_toBottomOf="@id/tricountType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
